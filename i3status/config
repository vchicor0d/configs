general {
  colors = true
  interval = 4
  color_good = "#2AA198"
  color_bad = "#586E75"
  color_degraded = "#DC322F"
}

order += "cpu_usage"
order += "disk /"
order += "path_exists SNX"
order += "wireless wlp2s0"
order += "ethernet enp1s0"
order += "battery all"
order += "volume master"
order += "time"

cpu_usage {
  format = " cpu %usage "
}

wireless wlp2s0 {
  format_up = "W: (%quality at %essid) %ip"
  format_down = ""
}

ethernet enp1s0 {
  # sudo setcap cap_net_admin=ep $(which i3status)
  format_up = "E: %ip (%speed)"
  format_down = ""
}

battery all {
  # format = "%status %percentage %remaining %emptytime"
  format = " %status %percentage"
  format_down = "No battery"
  last_full_capacity = true
  integer_battery_capacity = true
  status_chr = "⚡"
  status_bat = ""
  status_unk = ""
  status_full = "☻"
  low_threshold = 15
  threshold_type = time
}

path_exists SNX {
  path = "/proc/sys/net/ipv4/conf/tunsnx"
  format_down = ""
}

time {
  format = "%d.%m.%Y %H:%M"
}

disk "/" {
  format = " ⛁ %avail "
}

volume master {
  format = "🔊: %volume"
  format_muted = "🔇: muted (%volume)"
  device = "pulse:0"
  mixer = "Master"
  #mixer_idx = 0
}